<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>
            <Button Content="Login" Click="LoginButton_Click" HorizontalAlignment="Center"/>
            <Frame x:Name="MainFrame"/>
        </StackPanel>
    </Grid>
</Window>
