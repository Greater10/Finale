        <TextBox x:Name="KommentarTextBox" Canvas.Left="157" TextWrapping="Wrap" Canvas.Top="442" Width="317" Height="48"/>
        <Button Content="Opret" Canvas.Left="379" Canvas.Top="511" Height="29" Width="84" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Opret_Click"/>
        <Button Content="Anuller" Canvas.Left="250" Canvas.Top="511" Height="29" Width="84" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Anuller_Click"/>
        <TextBlock Canvas.Left="102" TextWrapping="Wrap" Text="Opgave oprettelse" Height="66" Width="296" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36"/>
    </Canvas>
