<Page x:Class="WpfApp5.Opgave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="Opgave">

    <Canvas Background="White" Margin="0,0,0,-50">
        <TextBox x:Name="CPRTextBox" Canvas.Left="174" TextWrapping="Wrap" Canvas.Top="75" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="PatientnavnTextBox" Canvas.Left="174" TextWrapping="Wrap" Canvas.Top="98" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
